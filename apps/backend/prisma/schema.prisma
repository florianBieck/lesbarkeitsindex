generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../generated/prismabox"
}

model Config {
  id                                 String   @id @default(cuid())
  parameterSyllableComplexity        Decimal // Silbenkomplexität (≥3 Vokalgruppen)
  parameterMultiMemberedGraphemes    Decimal // mehrgliedrige Grapheme (sch, ch, ck, ng, etc.)
  parameterRareGraphemes             Decimal // seltene Grapheme (ä, ö, ü, ß, c, q, x, y)
  parameterConsonantClusters         Decimal // Konsonantencluster (Str-, Spr-, -nkt, -cht)
  parameterCountWords                Decimal // Anzahl Wörter
  parameterAverageWordLength         Decimal // Durchschnittliche Wortlänge
  parameterAverageSyllablesPerWord   Decimal // ∅Silben/Wort
  parameterCountPhrases              Decimal // Anzahl Sätze
  parameterAveragePhraseLength       Decimal // Durchschnittliche Satzlänge
  parameterAverageSyllablesPerPhrase Decimal // ∅Silben/Satz
  parameterProportionOfLongWords     Decimal // Anteil an langen Wörtern
  results                            Result[]
}

model Result {
  id                        String  @id @default(cuid())
  syllableComplexity        Decimal // Silbenkomplexität (≥3 Vokalgruppen)
  multiMemberedGraphemes    Decimal // mehrgliedrige Grapheme (sch, ch, ck, ng, etc.)
  rareGraphemes             Decimal // seltene Grapheme (ä, ö, ü, ß, c, q, x, y)
  consonantClusters         Decimal // Konsonantencluster (Str-, Spr-, -nkt, -cht)
  countWords                Decimal // Anzahl Wörter
  averageWordLength         Decimal // Durchschnittliche Wortlänge
  averageSyllablesPerWord   Decimal // ∅Silben/Wort
  countPhrases              Decimal // Anzahl Sätze
  averagePhraseLength       Decimal // Durchschnittliche Satzlänge
  averageSyllablesPerPhrase Decimal // ∅Silben/Satz
  proportionOfLongWords     Decimal // Anteil an langen Wörtern
  score                     Decimal // Ergebnis
  text                      String
  hashText                  String
  config                    Config  @relation(fields: [configId], references: [id])
  configId                  String
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  role          String?
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
